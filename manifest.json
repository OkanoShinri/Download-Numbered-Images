{
  "manifest_version": 2,
  "name": "EasyImgDownloader",
  "version": "1.0.5",

  "description": "Simple download tool.",
  "homepage_url": "https://github.com/OkanoShinri/EasyImgDownloader",
  "icons": {
    "48": "icons/48.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "downloads",
    "storage",
    "notifications",
    "menus"
  ],
  "browser_action": {
    "default_icon": "icons/32.png",
    "default_title": "EasyImgDownloader",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "option/options.html"
  },
  "background": {
    "scripts": ["background-scripts/background.js"]
  }
}
